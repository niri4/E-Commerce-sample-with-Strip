<!DOCTYPE html>
<html>
  <head>
    <title>SampleEcommerceWithAdminPanel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Ecommerce', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <% if current_user %>

        <ul class="nav navbar-nav">
          <!-- <li> link_to 'My Order',controller: 'orders',action: 'index' %></li> -->

        </ul>
          <ul class="nav navbar-nav pull-right">
            <!-- <li> image_tag current_user.image_url, alt: current_user.email %></li> -->
          <li>  <%= link_to('Logout', destroy_user_session_path, method: :delete) %> </li>

          </ul>

        <% else %>
          <ul class="nav navbar-nav pull-right">
            <!-- <li> link_to 'Twitter', '/auth/twitter' %></li>
            <li> link_to 'Facebook', '/auth/facebook' %></li> -->
            <li> <%= link_to('Login', new_user_session_path)  %> </li>

          </ul>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>

    <%= yield %>
  </div>
  </body>
</html>
